{
  "name": "postcss-critical-css",
  "version": "3.0.7",
  "description": "Generate critical CSS using PostCSS",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zgreen/postcss-critical-css"
  },
  "keywords": [
    "postcss-plugin",
    "postcss plugin",
    "postcss",
    "critical-css",
    "critical",
    "css",
    "critical css"
  ],
  "author": "Zach Green",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.24.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-flow": "^7.27.1",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "flow-bin": "^0.216.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "minimist": "^1.2.8",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "tape": "^5.9.0"
  },
  "scripts": {
    "flow": "flow",
    "build": "npm run flow && npx babel src --out-dir dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cssnano": "^6.0.2",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.35"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
